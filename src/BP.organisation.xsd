<!-- version:0.11.0 -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"  xmlns:bp="BP.common">
    <xs:import namespace="BP.common" schemaLocation="BP.common.xsd"/>
    <xs:complexType name="OrganisationSetType">
        <xs:sequence maxOccurs="unbounded" minOccurs="1">
            <xs:element name="POLICY" type="OrganisationType"/>
        </xs:sequence>
    </xs:complexType>
    <xs:element name="POLICY_SET" type="OrganisationSetType">
        <xs:annotation>
            <xs:documentation>A container of organisation objects.</xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:element name="POLICY" type="OrganisationType"/>
    <xs:complexType name="OrganisationType">
        <xs:annotation>
            <xs:documentation>A organisation object contains information about the submitter of a dataset.</xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="bp:ObjectType">
                <xs:sequence>
                    <xs:element name="DATASET_REF" minOccurs="1" maxOccurs="1" type="bp:ReferenceType">
                        <xs:annotation>
                            <xs:documentation>Identifies the dataset the organisation submitted.</xs:documentation>
                        </xs:annotation>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
</xs:schema>
