<!-- version:0.11.0 -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"  xmlns:bp="BP.common">
    <xs:import namespace="BP.common" schemaLocation="BP.common.xsd"/>
    <xs:complexType name="EthicalFileType">
        <xs:complexContent>
            <xs:extension base="bp:FileBaseType">
                <xs:attribute name="filetype" use="required">
                    <xs:annotation>
                        <xs:documentation>The type of the file.</xs:documentation>
                    </xs:annotation>
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:enumeration value="pdf"/>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="EthicalSetType">
        <xs:sequence maxOccurs="unbounded" minOccurs="1">
            <xs:element name="ETHICAL" type="EthicalType"/>
        </xs:sequence>
    </xs:complexType>
    <xs:element name="ETHICAL_SET" type="EthicalSetType">
        <xs:annotation>
            <xs:documentation>A container of ethical objects.</xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:element name="ETHICAL" type="EthicalType"/>
    <xs:complexType name="EthicalType">
        <xs:annotation>
            <xs:documentation>A ethical object contains the declaration of compliance for a dataset.</xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="bp:ObjectType">
                <xs:sequence>
                    <xs:sequence>
                        <xs:element name="DATASET_REF" minOccurs="1" maxOccurs="1" type="bp:ReferenceType">
                            <xs:annotation>
                                <xs:documentation>Identifies the dataset the ethical entity applies to.</xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element name="INFORMED_CONSENT_FILE" minOccurs="0" maxOccurs="unbounded" type="EthicalFileType">
                            <xs:annotation>
                                <xs:documentation>File with informed consent form supporting the ethical approval.</xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element name="STUDY_PROTOCOL_FILE" minOccurs="0" maxOccurs="unbounded" type="EthicalFileType">
                            <xs:annotation>
                                <xs:documentation>File with study protocol supporting the ethical approval.</xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element name="OTHER_ETHICAL_APPROVAL_SUPPORTING_FILE" minOccurs="0" maxOccurs="unbounded" type="EthicalFileType">
                            <xs:annotation>
                                <xs:documentation>Other file supporting the ethical approval.</xs:documentation>
                            </xs:annotation>
                        </xs:element>
                    </xs:sequence>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
</xs:schema>
