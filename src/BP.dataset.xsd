<!-- version:1.0.0 -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:bp="BP.common">
	<xs:import namespace="BP.common" schemaLocation="BP.common.xsd"/>


	<xs:element name="DATASET" type="DatasetType"/>
	<xs:complexType name="DatasetType">
		<xs:annotation>
			<xs:documentation>Describes an object that contains the samples in the data set.
    		</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="bp:ObjectType">
				<xs:sequence>
					<xs:element name="TITLE" maxOccurs="1" minOccurs="1" type="xs:string">
						<xs:annotation>
							<xs:documentation>The title of the dataset.</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="SHORT_NAME" maxOccurs="1" minOccurs="1" type="xs:string">
						<xs:annotation>
							<xs:documentation>A short name of the dataset.</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="DESCRIPTION" type="xs:string" minOccurs="0" maxOccurs="1">
						<xs:annotation>
							<xs:documentation>Free-form text describing the data sets.</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="VERSION" type="xs:string" minOccurs="1" maxOccurs="1">
						<xs:annotation>
							<xs:documentation>The version of the dataset.</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="METADATA_STANDARD" type="xs:string" minOccurs="1" maxOccurs="1">
						<xs:annotation>
							<xs:documentation>The metadata standard version of the dataset.</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element minOccurs="0" name="DATASET_TYPE" maxOccurs="unbounded">
						<xs:simpleType>
							<xs:restriction base="xs:string">
							<xs:enumeration value="Whole slide imaging"/>
							</xs:restriction>
						</xs:simpleType>
					</xs:element>
					<xs:element maxOccurs="1" minOccurs="1" name="POLICY_REF" type="bp:ReferenceType">
						<xs:annotation>
							<xs:documentation>Identifies the data access policy controlling this data set.
							</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element maxOccurs="1" minOccurs="1" name="ETHICAL_REF" type="bp:ReferenceType">
						<xs:annotation>
							<xs:documentation>Identifies the ethical entity for this data set.
							</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element maxOccurs="unbounded" minOccurs="0" name="IMAGE_REF" type="bp:ReferenceType"
						nillable="false">
						<xs:annotation>
							<xs:documentation>
								Identifies the images which are part of this dataset.
							</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element maxOccurs="unbounded" minOccurs="0" name="ANNOTATION_REF" type="bp:ReferenceType"
						nillable="false">
						<xs:annotation>
							<xs:documentation>
								Identifies the annotations which are part of this dataset.
							</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element maxOccurs="unbounded" minOccurs="0" name="OBSERVATION_REF" type="bp:ReferenceType"
						nillable="false">
						<xs:annotation>
							<xs:documentation>
								Identifies the observations which are part of this dataset.
							</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element maxOccurs="unbounded" minOccurs="0" name="COMPLEMENTS_DATASET_REF" type="bp:ReferenceType"
					nillable="false">
					<xs:annotation>
						<xs:documentation>
							Identifies the datasets which this dataset complements.
						</xs:documentation>
					</xs:annotation>
				</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:element name="DATASET_SET" type="DatasetSetType">
		<xs:annotation>
			<xs:documentation>Container for a set of data sets.
			</xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:complexType name="DatasetSetType">
		<xs:sequence maxOccurs="unbounded" minOccurs="1">
            <xs:element name="DATASET" type="DatasetType"/>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
